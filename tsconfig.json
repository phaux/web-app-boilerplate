{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "module": "esnext",
    "noUnusedLocals": true,
    "outDir": "scripts",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018"
  },
  "include": ["src"]
}
